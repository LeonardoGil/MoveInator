<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoveInatorMaui.Pages.Cadastros.CadastroEmpresaPage"
             Title="CadastroEmpresaPage">

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             Spacing="15">

            <Label Text="Empresas"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   FontSize="30"
                   TextColor="Gray" />

            <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
                  ColumnDefinitions="0.50*, 0.50*"
                  RowSpacing="10"
                  ColumnSpacing="10">


                <Label Text="Razão Social"
                       FontAttributes="Bold"
                       FontSize="Small"
                       Grid.Row="0"
                       Grid.Column="0"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />

                <Entry Placeholder="Obrigatório"
                       FontSize="18"
                       Grid.Row="1"
                       Grid.Column="0" />

                <Label Text="CNPJ"
                       FontAttributes="Bold"
                       FontSize="Small"
                       Grid.Row="0"
                       Grid.Column="1"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />


                <Entry Placeholder="Obrigatório"
                       FontSize="18"
                       Grid.Row="1"
                       Grid.Column="1" />

                <!--<Entry Placeholder="ClientId"
               FontSize="18"
               Grid.Row="1"
               Grid.Column="0"
               Grid.ColumnSpan="2" />

                <Entry Placeholder="ClientSecret"
               FontSize="18"
               Grid.Row="2"
               Grid.Column="0"
               Grid.ColumnSpan="2" />-->
            </Grid>

            <Button Text="Salvar"
            FontSize="26"
            HorizontalOptions="Center"
            VerticalOptions="End" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>